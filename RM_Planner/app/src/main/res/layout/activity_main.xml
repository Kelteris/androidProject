<?xml version="1.0" encoding="utf-8"?>
<com.cs246.rmgroup.rmplanner.FlyOutContainer xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cs246.rmgroup.rmplanner.MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sideLayout"
        android:orientation="vertical"
        android:background="@drawable/draw_side">

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:onClick="showDatePickerDialog"/>
    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/draw_main">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="5dp"
            android:paddingTop="@dimen/activity_vertical_margin">


            <TextView
                android:id="@+id/dateView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:text="Date: "
                android:onClick="showDatePickerDialog"/>

            <LinearLayout
                android:id="@+id/linLay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dateView">

                <ScrollView
                    android:id="@+id/scrollView"
                    android:layout_width="200dp"
                    android:layout_height="350dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/draw_back_scroll"
                    >

                    <GridLayout
                        android:id="@+id/gridLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:horizontalSpacing="1dp"
                        android:verticalSpacing="1dp">


                    </GridLayout>
                </ScrollView>

                <EditText
                    android:id="@+id/notes"
                    android:layout_width="100dp"
                    android:layout_height="350dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/draw_back"
                    android:gravity="center_horizontal"
                    android:hint="Notes"
                    android:textSize="15dp"/>

            </LinearLayout>

            <ListView
                android:id="@+id/list_todo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_below="@id/linLay1"
                android:layout_toRightOf="@+id/menuButton"
                android:background="@drawable/draw_back"/>

            <ImageButton
                android:id="@+id/menuButton"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linLay1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:onClick="toggleMenu"
                android:background="@drawable/arrow_right"/>

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/add_task"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/plus_button"/>
        </RelativeLayout>


    </LinearLayout>
</com.cs246.rmgroup.rmplanner.FlyOutContainer>